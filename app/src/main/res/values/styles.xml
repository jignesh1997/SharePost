<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="InputTextLayoutStyle" >
        <item name="android:textColorHint">@color/broun</item>

    </style>
        <style name="hintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_10sdp</item>


    </style>
    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">@color/broun</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

</resources>
